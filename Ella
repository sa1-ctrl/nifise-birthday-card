    <p>Hope you have a better day than the previous ones, more clients, and actually whatever you want â€” because you deserve it!</p>
    <footer>â€” A Secret Admirer ðŸ’–</footer>
  </div>

  <script>
    const canvas = document.getElementById('confetti-canvas');
    const ctx = canvas.getContext('2d');
    let W = canvas.width = window.innerWidth;
    let H = canvas.height = window.innerHeight;
    window.addEventListener('resize', () => {
      W = canvas.width = window.innerWidth;
      H = canvas.height = window.innerHeight;
    });
    const colors = ['#FFC0CB','#FFD700','#FF69B4','#FFB6C1','#FFA07A'];
    const pieces = [];
    const rand = (min, max) => Math.random() * (max - min) + min;
    class Piece {
      constructor() {
        this.x = rand(0, W);
        this.y = rand(-H, 0);
        this.vx = rand(-1, 1);
        this.vy = rand(2, 5);
        this.size = rand(5, 10);
        this.color = colors[Math.floor(rand(0, colors.length))];
        this.tilt = rand(-10, 10);
      }
      update() {
        this.x += this.vx;
        this.y += this.vy;
        this.tilt += rand(-0.5, 0.5);
        if (this.y > H) {
          this.y = rand(-20, 0);
          this.x = rand(0, W);
        }
      }
      draw() {
        ctx.save();
        ctx.fillStyle = this.color;
        ctx.translate(this.x, this.y);
        ctx.rotate((this.tilt * Math.PI) / 180);
        ctx.fillRect(0, 0, this.size, this.size / 4);
        ctx.restore();
      }
    }
    for (let i = 0; i < 200; i++) pieces.push(new Piece());
    function animate() {
      ctx.clearRect(0, 0, W, H);
      pieces.forEach(p => { p.update(); p.draw(); });
      requestAnimationFrame(animate);
    }
    animate();
  </script>
